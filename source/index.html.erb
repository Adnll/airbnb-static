      <!-- Your banner code -->
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
        <div class="banner-content">
          <h1>WELCOME HOME</h1>
          <p>Feel at home anywhere, anytime.</p>
          <form action="#" class="form-inline">
              <input name="departure" id="" class="form-control input-lg" placeholder="Check-in">
              <input name="departure" id="" class="form-control input-lg" placeholder="Check-out">
            <select class="form-control input-lg">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <input type="submit" value="Submit" class="btn btn-primary input-lg">
          </form>
        </div>
      </div>
      <!-- Your features code -->
      <div class="container text-center padded features">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "globe.png" %>
            <h2>Discover the world</h2>
            <p>The earth is your new home.</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "dollar.png" %>
            <h2>Pay online</h2>
            <p>No cash issues anymore.</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "beer.png" %>
            <h2>Meet people</h2>
            <p>Discover new culture and lifestyle.</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "heart.png" %>
            <h2>Share and love</h2>
            <p>Join a community you will love.</p>
          </div>
        </div>
      </div>
      <!-- Your cards code -->
      <div class="wrapper-grey padded">
        <div class="container">
          <h2 class="text-center">Your next trips</h2>
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
                <%= link_to "", "#", class: "card-link" %>
                <div class="card-category">London</div>
                <div class="card-description">
                  <h2>Seb's home</h2>
                  <p>London is waiting for you</p>
                </div>
                <%= image_tag "seb.jpg", class: "avatar card-avatar" %>
              </div>
            </div>
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">
                <%= link_to "", "#", class: "card-link" %>
                <div class="card-category">Brussels</div>
                <div class="card-description">
                  <h2>Anne's home</h2>
                  <p>Brussels is waiting for you</p>
                </div>
                <%= image_tag "anne.jng", class: "avatar card-avatar" %>
              </div>
            </div>
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
                <%= link_to "", "#", class: "card-link" %>
                <div class="card-category">Paris</div>
                <div class="card-description">
                  <h2>Seb's home</h2>
                  <p>Paris is waiting for you</p>
                </div>
                <%= image_tag "romain.jpeg", class: "avatar card-avatar" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Your newsletter code -->
      <form action="#" class="form-inline text-center padded">
        <h2>Get news from us</h2>
        <input type="email" class="form-control" placeholder="jean@gmail.com">
